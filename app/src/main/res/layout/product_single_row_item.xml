<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/linear_layout_product"
        android:layout_width="175dp"
        android:layout_height="232dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Product Name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_view_product_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Color : "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_view_product_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Size : "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_view_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Price : "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_view_product_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Variants : "
            android:textSize="14dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>